{% extends '../layout.njk' %}

{% block content %}

  <article>
    <h2 class="">Events</h2>
    <div class="cf pa2">
      <div class="">
        {% for event in events %}
        <a class="dim"
           href="{{ event.website or event.gallery.website }}">
           {% if event.image %}
            <img src="{{ event.image }}" class="h4"/>
           {% endif %}
          <dl class="">
            <dd class="white-90">{{ event.title }}</dd>
            <dd class="hot-pink">{{ event.gallery.name }}</dd>
          </dl>
        </a>
        {% endfor %}
      </div>
    </div>

  <div class="w-100 overflow-scroll">
    <code class="code pre f6 dib pa2 bg-black-80 white-90">{{ events | dump(2) }}</code>
  </div>

{% endblock %}
