{% extends '../layout.njk' %}

{% block content %}

  <article class="wrapper">
   
        {% for event in events %}
        <div class="pa3 event-box dim pointer">
          <a class="link" href="{{ event.website or event.gallery.website }}">
            
            {% if event.image %}
              <img src="{{ event.image }}" class="h3 lr"/>
            {% endif %}
            
            <h2 class="hot-pink ttu f6 mb3">
              {{ event.gallery.name }}
            </h2>
            <h2 class="hot-pink ttu f6 mb3">
              exhibition-date
            </h2>
            <h3 class="white-90 f2">
              {{ event.title }}
            </h3>
  
          
        </a>
      </div>
        {% endfor %}
   
  </article>

  <!-- <div class="w-100 overflow-scroll">
    <code class="code pre f6 dib  pa2 bg-black-80 white-90">{{ events | dump(2) }}</code>
  </div> -->

{% endblock %}
