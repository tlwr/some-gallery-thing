{
  "name": "some-gallery-thing",
  "version": "1.0.0",
  "description": "a web application for finding galleries",
  "main": "index.js",
  "scripts": {
    "start": "export NODE_ENV=${NODE_ENV:-development} && npm run serve",
    "test": "export NODE_ENV=test && jest --forceExit --detectOpenHandles --coverage --verbose --testPathIgnorePatterns integration-tests",
    "test:integration": "export NODE_ENV=test && jest --forceExit --detectOpenHandles --verbose --testPathPattern integration-tests",
    "build": "npm run build:sass && npm run build:ts",
    "build:sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build:ts": "tsc",
    "serve": "npm run build && node dist/server.js",
    "watch": "export NODE_ENV=development && npm run watch:all",
    "watch:all": "npm run build:sass && concurrently -k -p \"[{name}]\" -n \"CSS,TS,JS\" \"npm run watch:sass\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:node": "nodemon dist/server.js",
    "watch:sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch:ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tlwr/some-gallery-thing.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tlwr/some-gallery-thing/issues"
  },
  "homepage": "https://github.com/tlwr/some-gallery-thing#readme",
  "dependencies": {
    "@types/lodash": "^4.14.136",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "express-prom-bundle": "^5.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "nunjucks": "^3.2.0",
    "pino-pretty": "^3.2.0",
    "prom-client": "^11.5.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cheerio": "^0.22.12",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.16",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.6.9",
    "@types/nunjucks": "^3.1.1",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "tachyons": "^4.11.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.+.njk",
      "<rootDir>/config/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts)"
    ]
  }
}
