{
  "name": "some-gallery-thing",
  "version": "1.0.0",
  "description": "a web application for finding galleries",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "npm run build-sass && concurrently -k -p \"[{name}]\" -n \"CSS,TS,JS\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tlwr/some-gallery-thing.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tlwr/some-gallery-thing/issues"
  },
  "homepage": "https://github.com/tlwr/some-gallery-thing#readme",
  "dependencies": {
    "express": "^4.17.1",
    "express-prom-bundle": "^5.1.5",
    "moment": "^2.24.0",
    "nunjucks": "^3.2.0",
    "prom-client": "^11.5.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.9",
    "@types/nunjucks": "^3.1.1",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "tachyons": "^4.11.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.+.njk",
      "<rootDir>/config/",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts)"
    ]
  }
}
